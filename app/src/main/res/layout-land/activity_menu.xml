<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/add"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_width="180dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:onClick="agregarscreen"
        android:text="@string/btnagregar"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/list"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/list"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
        android:layout_width="184dp"
        android:layout_height="62dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="84dp"
        android:onClick="Listarscreen"
        android:text="@string/btnlista"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/del"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="194dp"
        android:layout_height="61dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="100dp"
        android:onClick="Deletescreen"
        android:text="@string/btneliminar"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add"
        app:layout_constraintVertical_bias="0.525" />

    <Button
        android:id="@+id/upd"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="212dp"
        android:layout_height="67dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="56dp"
        android:onClick="Updatescreen"
        android:text="@string/btnupdate"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toEndOf="@+id/del"
        app:layout_constraintTop_toBottomOf="@+id/list" />
</androidx.constraintlayout.widget.ConstraintLayout>